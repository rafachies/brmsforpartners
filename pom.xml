	<groupId>com.redhat</groupId>
	<artifactId>brmsforpartners</artifactId>
	<packaging>war</packaging>
	<version>0.0.1</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<javaee6.with.tools.version>1.0.0.Final</javaee6.with.tools.version>
		<org.richfaces.bom.version>4.2.2.Final</org.richfaces.bom.version>
		<version.jbpm>5.3.1.BRMS</version.jbpm>
		<version.protobuf>2.4.1</version.protobuf>
		<version.drools>5.3.1.BRMS</version.drools>
		<version.ecj>3.5.1</version.ecj>
		<version.mvel2>2.1.0.drools16</version.mvel2>
		<version.antlr>3.3</version.antlr>
		<version.slf4j>1.6.1</version.slf4j>
		<version.commons.codec>1.5</version.commons.codec>
